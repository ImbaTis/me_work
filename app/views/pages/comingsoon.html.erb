<!-- This example requires Tailwind CSS v2.0+ -->
<!--
  This example requires updating your template:

  ```
  <html class="h-full">
  <body class="h-full">
  ```
-->
<div class="bg-white min-h-full flex flex-col lg:relative">
  <div class="flex-grow flex flex-col min-h-screen">
    <main class="flex-grow flex flex-col bg-white">
      <div class="flex-grow mx-auto max-w-7xl w-full flex flex-col px-4 sm:px-6 lg:px-8">
        <div class="flex-shrink-0 mt-16 py-12 sm:py-32">
          <h1 class="mt-2 text-4xl font-extrabold text-indigo-800 tracking-tight sm:text-5xl">Coming Soon</h1>
          <h3 class="mt-12 w-2/5  text-gray-500 text-xl">Interested? Leave your email to stay up to date with the latest MeWorks news!</h3>
          <div class="mt-10">
            <%= form_with url: collect_email_path, method: :post, local: true do |f| %>
              <div class="w-2/5 grid grid-cols-3 gap-3 items-center">
                <%= f.email_field :email, placeholder: 'Enter your email', class: "border rounded py-1 px-2 col-span-2" %>
                <%= f.submit 'Submit', class: "rounded py-1 px-3 bg-yellow-500 text-white h-full" %>
              </div>
            <% end %>
          </div>
        </div>
      </div>
    </main>

  </div>
  <div class="hidden lg:block lg:absolute lg:inset-y-0 lg:right-0 lg:w-1/2">
    <img class="absolute inset-0 h-full w-full object-cover" src="https://images.unsplash.com/photo-1637852846765-f6a2081394b7?ixlib=rb-1.2.1&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=1111&q=80" alt="">
  </div>
</div>
