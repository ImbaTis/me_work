<div class="flex flex-col justify-evenly h-auto">
    <div class="mt-5">
    <%# start of row %>
      <span class="ml-16 font-serif text-lg text-yellow-600">My Jobs</span>
      <div class="flex overflow-x-scroll pb-10 hide-scroll-bar">
          <div class="flex flex-nowrap ml-10 ">
          <%# cards begin %>

          <% @jobs.each do |job|  %>
            <div class="inline-block px-3">
              <div class="w-80 h-48 max-w-xs overflow-hidden rounded-lg shadow-md bg-yellow-400 hover:shadow-xl transition-shadow duration-300 ease-in-out">
                <div class="group h-40 px-4 py-4 rounded-md bg-yellow-300 flex flex-col justify-evenly ml-3 mr-3 mt-3 mb-3">
                  <span><%= job.title %></span>
                  <span><%= job.industry %></span>
                  <span><%= job.description %></span>
                </div>
              </div>
            </div>
            <% end %>
          </div>
        </div>
        <%# this is the end of the row  %>
