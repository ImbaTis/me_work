<!-- Section and card content -->

<div class="flex flex-col justify-evenly h-auto bg-gray-200">
    <div class="mt-5">
     <span class="ml-16 font-lato text-lg text-yellow-500">My Saved Jobs</span>
      <div class="flex overflow-x-scroll pb-10 hide-scroll-bar">
          <div class="flex flex-nowrap ml-10 ">          <% @jobs.each do |job|  %>
            <div class="inline-block px-3">
              <div class="w-80 h-48 max-w-xs overflow-hidden rounded-lg shadow-md  hover:shadow-xl transition-shadow duration-300 ease-in-out">
                <div class="group h-40 px-4 py-4 rounded-md  flex flex-col justify-center  items-stretch  ml-3 mr-3 mt-3 mb-3">
                  <h5 class="self-start"><%= job.title %></h5>
                  <h6><%= job.industry %></h6>
                  <p><%= job.description %></p>
                </div>
              </div>
            </div>
            <% end %>
          </div>
        </div>
        <%# this is the end of the row  %>
    <span class="ml-16 font-lato text-lg text-yellow-500">My Saved Gigs</span>
      <div class="flex overflow-x-scroll pb-10 hide-scroll-bar">
          <div class="flex flex-nowrap ml-10 ">
        <% @resources.each do |resource|  %>
