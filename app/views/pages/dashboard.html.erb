              <div class="w-80 h-48 max-w-xs overflow-hidden rounded-lg shadow-md  hover:shadow-xl transition-shadow duration-300 ease-in-out">
                <div class="group h-40 px-4 py-4 rounded-md  flex flex-col justify-evenly ml-3 mr-3 mt-3 mb-3">
                  <h5><%= resource.name %></h5>
                  <h6><%= resource.time %></h6>
                  <p><%= resource.description %></p>
                </div>
              </div>
            </div>
